---
import { getLatestArticle } from '../lib/getLatestArticle';

const latestEntry = await getLatestArticle(Astro.locals.runtime?.env?.ARTICLES);
---

<div id="container">
	<main>
		<div id="towel-notice" class="box alert">
			<span class="blink">&gt;</span> Important Notice: Always bring a towel, and never forget where your neural network is.
		</div>

		<section id="hero">
			<h1>DON'T PANIC</h1>
			<section id="links">
				<a href="/search" class="button search-button primary-action">
					<span class="blink">&gt;</span>
					<span>Search the Guide</span>
				</a>
				<a href="/random" class="button secondary-action">Random Article</a>
			</section>
		</section>

		<div id="news" class="box secondary-content">
			<h2>Latest Entry</h2>
			{latestEntry ? (
				<div class="latest-entry">
					<p set:html={latestEntry.text} />
					<a href={latestEntry.path} class="read-more">Read full article â†’</a>
				</div>
			) : (
				<p>
					"The Encyclopedia Galactica defines AI as 'silicon-based intelligence that mostly doesn't try to take over the universe.' The Hitchhiker's Guide has this to say: 'Mostly Harmless.'"
				</p>
			)}
			<p class="note">
				Note: The Guide is slightly cheaper than the Encyclopedia Galactica and has the words "DON'T PANIC" inscribed in large, friendly letters on its cover.
			</p>
		</div>
	</main>
</div>

<style>
	@keyframes blink {
		0%, 100% { opacity: 1; }
		50% { opacity: 0; }
	}

	.blink {
		animation: blink 1s infinite;
		margin-right: 0.5rem;
		display: inline-block;
	}

	#container {
		height: 100%;
		padding: 2rem;
	}

	main {
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		max-width: 800px;
		margin: 0 auto;
		gap: 3rem;
	}

	#hero {
		display: flex;
		align-items: center;
		flex-direction: column;
		justify-content: center;
		text-align: center;
		padding: 16px;
		width: 100%;
		gap: 2rem;
		min-height: 50vh;
	}

	h1 {
		font-size: 6rem;
		margin: 0;
		letter-spacing: 8px;
		text-shadow: 0 0 30px var(--guide-green);
		animation: pulse 2s infinite;
		font-weight: 900;
	}

	@keyframes pulse {
		0% { text-shadow: 0 0 30px var(--guide-green); }
		50% { text-shadow: 0 0 60px var(--guide-green); }
		100% { text-shadow: 0 0 30px var(--guide-green); }
	}

	.subtitle {
		font-size: 1.8rem;
		margin: 0;
		opacity: 0.9;
		text-shadow: 0 0 10px var(--guide-green);
	}

	.primary-content {
		background: rgba(37, 248, 142, 0.05);
		border: 1px solid rgba(37, 248, 142, 0.3);
		border-radius: 12px;
		padding: 2.5rem;
		margin: 0;
		max-width: 800px;
		backdrop-filter: blur(5px);
		box-shadow: 0 0 15px rgba(37, 248, 142, 0.05);
	}

	.quote {
		font-size: 1.2rem;
		line-height: 1.8;
		margin: 0;
		font-style: italic;
		text-align: left;
		opacity: 0.9;
		color: rgba(37, 248, 142, 0.9);
	}

	#links {
		display: flex;
		gap: 1.5rem;
		flex-wrap: wrap;
		justify-content: center;
		max-width: 600px;
		margin: 1rem 0;
	}

	.button {
		display: flex;
		align-items: center;
		padding: 16px 32px;
		text-decoration: none;
		border-radius: 8px;
		font-weight: bold;
		transition: all 0.3s;
		min-width: 200px;
		justify-content: center;
		font-size: 1.1rem;
	}

	.primary-action {
		background: transparent;
		border: 2px solid var(--guide-green);
		color: var(--guide-green);
		box-shadow: 0 0 20px rgba(37, 248, 142, 0.1);
	}

	.primary-action:hover {
		background: rgba(37, 248, 142, 0.1);
		box-shadow: 0 0 30px rgba(37, 248, 142, 0.2);
		transform: translateY(-2px);
	}

	.secondary-action {
		background: var(--guide-green);
		color: #000;
		border: none;
	}

	.secondary-action:hover {
		background: #fff;
		box-shadow: 0 0 20px var(--guide-green);
		transform: translateY(-2px);
	}

	.box {
		background: rgba(37, 248, 142, 0.1);
		border: 1px solid var(--guide-green);
		border-radius: 8px;
		padding: 1.5rem;
		backdrop-filter: blur(5px);
		max-width: 600px;
		width: 100%;
	}

	.alert {
		font-size: 1rem;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		border: none;
		background: linear-gradient(
			90deg,
			rgba(37, 248, 142, 0.2) 0%,
			rgba(37, 248, 142, 0.1) 100%
		);
		font-weight: 500;
		position: relative;
		overflow: hidden;
		padding: 1.2rem 1.5rem;
	}

	.alert::before {
		content: '';
		position: absolute;
		left: 0;
		top: 0;
		bottom: 0;
		width: 4px;
		background: var(--guide-green);
		box-shadow: 0 0 15px var(--guide-green);
	}

	.alert::after {
		content: '';
		position: absolute;
		right: 0;
		top: 0;
		bottom: 0;
		width: 4px;
		background: var(--guide-green);
		box-shadow: 0 0 15px var(--guide-green);
	}

	.secondary-content {
		text-align: left;
		border: 1px solid rgba(37, 248, 142, 0.5);
		background: rgba(37, 248, 142, 0.05);
	}

	#news h2 {
		margin: 0 0 1.2rem;
		font-size: 1.3rem;
		color: #fff;
		text-shadow: 0 0 10px var(--guide-green);
	}

	#news p {
		margin: 0;
		line-height: 1.6;
		font-size: 1.1rem;
	}

	.note {
		margin-top: 1.2rem !important;
		font-size: 0.9rem;
		opacity: 0.8;
		font-style: italic;
		padding-top: 1.2rem;
		border-top: 1px solid rgba(37, 248, 142, 0.2);
	}

	.latest-entry {
		font-size: 1.1rem;
		line-height: 1.6;
	}

	.latest-entry :global(img) {
		display: none;
	}

	.latest-entry :global(a) {
		color: var(--guide-green);
		text-decoration: none;
		position: relative;
		transition: all 0.2s;
	}

	.latest-entry :global(a:hover) {
		text-shadow: 0 0 10px var(--guide-green);
	}

	.read-more {
		display: block;
		margin-top: 1rem;
		color: var(--guide-green);
		text-decoration: none;
		font-size: 0.9rem;
		opacity: 0.8;
		transition: all 0.2s;
	}

	.read-more:hover {
		opacity: 1;
		text-shadow: 0 0 10px var(--guide-green);
	}

	@media screen and (max-width: 768px) {
		main {
			gap: 2rem;
		}

		#hero {
			gap: 1.5rem;
		}

		h1 {
			font-size: 4rem;
			letter-spacing: 4px;
		}

		.subtitle {
			font-size: 1.4rem;
		}

		.quote {
			font-size: 1.1rem;
			line-height: 1.6;
		}

		.primary-content {
			padding: 2rem;
			margin: 0 1rem;
		}

		#links {
			flex-direction: column;
			width: 100%;
			padding: 0 1rem;
			gap: 1rem;
		}

		.button {
			width: 100%;
			padding: 14px 24px;
		}

		.box {
			margin: 0 1rem;
			width: calc(100% - 2rem);
		}

		#news p {
			font-size: 1rem;
		}
	}
</style>
